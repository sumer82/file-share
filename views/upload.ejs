                <div class="icon">
                    <i class="fa fa-files-o" aria-hidden="true"></i>
                </div>
                <span class="header">Drag & Drop</span>
                <input type="file" id ="fileInput">
                <span>or <span class="button">Browse</span></span>
            </div>
        </form>
        <section class="progress-area"></section>
        <section class="progress-area"></section>
        <div class="link">
            <h4>File upload sucessfull</h4>
            <h5>here is link for download page</h5>
            <div class="url">
                <input type="text" id="fileUrl" readonly><i class="fa fa-clipboard" aria-hidden="true"></i>
                <span></span>
            </div>
        </div>
    </div>
    <div class="social">
        <h1>hello from social</h1>
    </div>

